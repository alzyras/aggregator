# Database Configuration
MYSQL_HOST=localhost
MYSQL_DB=aggregator
MYSQL_USER=your_username
MYSQL_PASSWORD=your_password

# Scheduler
INTERVAL_SECONDS=3600

# Plugin Configuration (comma separated; leave empty to enable all installed)
ENABLED_PLUGINS=asana,habitica,toggl,google_fit,llm_summary

# Asana API Credentials
ASANA_PERSONAL_ACCESS_TOKEN=your_asana_access_token
ASANA_WORKSPACE_GID=your_workspace_gid

# Habitica API Credentials
HABITICA_USER_ID=your_habitica_user_id
HABITICA_API_TOKEN=your_habitica_api_token

# Toggl API Credentials
TOGGL_API_TOKEN=your_toggl_api_token
TOGGL_WORKSPACE_ID=your_workspace_id

# Google Fit API Credentials
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id
GOOGLE_FIT_CLIENT_SECRET=your_google_fit_client_secret
GOOGLE_FIT_REFRESH_TOKEN=your_refresh_token_if_available

# LLM Summary plugin
LLM_SUMMARY_BASE_URL=http://192.168.1.46:1234/v1/chat/completions
LLM_SUMMARY_MODEL=mistralai/ministral-3-3b
LLM_SUMMARY_TEMPERATURE=0.4
LLM_SUMMARY_MAX_TOKENS=700
LLM_SUMMARY_TIMEOUT=30
LLM_SUMMARY_MONTHS=12
LLM_SUMMARY_TOP_N=8
LLM_SUMMARY_MAX_CONTEXT_CHARS=12000
LLM_SUMMARY_EMERGE_THRESHOLD_PCT=60
LLM_SUMMARY_DECLINE_THRESHOLD_PCT=40
